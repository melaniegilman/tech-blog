<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="/post/{{post.id}}" target="_blank">{{post.title}}</a>
                <span>({{post.post_text}})</span>
            </div>
            <div class="meta">
                {{post.vote_count}} Like(s) by {{post.user.username}} on
                {{format_date post.created_at}}
                |
                <a href="/post/{{post.id}}">{{post.comments.length}} Comment(s)</a>
            </div>
        </article>
    </li>
    <ol class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post }}
        </li>
        {{/each}}
    </ol>
    {{/each}}
</ol>